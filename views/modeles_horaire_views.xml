<?xml version="1.0"?>
<openerp>
    <record id="view_tree_modeles_horaire" model="ir.ui.view">
        <field name="name">modeles.horaire.tree</field>
        <field name="model">modeles.horaire</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="nbrHeuresJour" widget="float_time"/>
                <field name="totalHeuresHebdo"/>
            </tree>
        </field>
    </record>

    <record id="view_form_modeles_horaire" model="ir.ui.view">
        <field name="name">modeles.horaire.form</field>
        <field name="model">modeles.horaire</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="group_top">
                        <field name="name"/>
                        <field name="nbrHeuresJour" widget="float_time"/>
                        <field name="totalHeuresHebdo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</openerp>
